<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvSelectBackground"
        android:layout_width="104dp"
        android:layout_height="94dp"
        app:cardCornerRadius="13dp"
        android:layout_marginTop="@dimen/dp_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"/>

        <ImageView
            android:id="@+id/ivBorder"
            android:layout_width="match_parent"
            android:visibility="invisible"
            android:layout_height="match_parent"
            android:background="@drawable/bg_select_background" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvBackgroundName"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/cvSelectBackground"
        app:layout_constraintRight_toRightOf="@+id/cvSelectBackground"
        app:layout_constraintTop_toBottomOf="@+id/cvSelectBackground"
        android:textSize="@dimen/sp_12"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:lineHeight="@dimen/sp_16"
        android:maxLines="2"
        android:lineSpacingExtra="-2sp"
        android:fontFamily="@font/novablack"
        android:textColor="@color/black_bg60"
        tools:text="bg name"/>

</androidx.constraintlayout.widget.ConstraintLayout>